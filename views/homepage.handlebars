<!-- Loop over the blogs to display each blog -->
{{#each blogs as |blog|}}
    <div class="row mb-4 blog">
        <a href="/blogs/{{blog.id}}">
            <div class="col-md-5">
                <h2>
                    <span>{{blog.title}}</span>
                    <span>-Posted by
                        {{blog.user_id}}
                        on
                        {{blog.date_created}}
                    </span>
                </h2>
            </div>
            <div class="col-md-7">
                <p>
                    {{blog.content}}
                </p>
            </div>
        </a>
    </div>
{{/each}}